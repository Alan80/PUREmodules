<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#b8569fee"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.69"
                android:orientation="vertical"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentStart="true">

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph"
                    android:layout_width="match_parent"
                    android:layout_height="259dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:id="@+id/linearLayout3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/bt_clear"
                        android:layout_width="65dp"
                        android:layout_height="65dp"

                        android:layout_alignBottom="@+id/button2"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="15dp"

                        android:background="@drawable/custom_button1"
                        android:onClick="onClickClear"
                        android:text="clear"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_above="@+id/data_value"
                        android:layout_marginEnd="24dp"
                        android:layout_toStartOf="@+id/bt_clear"
                        android:background="@drawable/custom_button1"
                        android:onClick="onClickWrite"
                        android:text="Read"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="212dp">

                    <RelativeLayout
                        android:id="@+id/Air_Box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/data_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/custom_button1"
                            android:text="@string/no_data"
                            android:textColor="#FFFFFF"
                            android:onClick="onClickAir"/>

                        <TextView
                            android:id="@+id/ch0_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/data_value"
                            android:layout_alignTop="@+id/data_value"
                            android:layout_marginStart="10dp"
                            android:text="Air:"
                            android:textColor="#FFFFFF" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/deep_soil_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="24dp">

                        <Button
                            android:id="@+id/ch2_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/custom_button1"
                            android:text="@string/no_data"
                            android:onClick="onClickDeepSoil"/>

                        <TextView
                            android:id="@+id/ch2_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignTop="@+id/ch2_value"
                            android:text="Deep soil:"
                            android:textColor="#FFFFFF" />

                        <RelativeLayout
                            android:id="@+id/mid_soil_box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true">

                            <Button
                                android:id="@+id/ch1_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/custom_button1"
                                android:text="@string/no_data"
                                android:textColor="#1874cd"
                                android:onClick="onClickMidSoil"/>

                            <TextView
                                android:id="@+id/ch1_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/ch0_textView"
                                android:layout_alignTop="@+id/ch1_value"
                                android:text="Mid soil:"
                                android:textColor="#FFFFFF" />

                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>